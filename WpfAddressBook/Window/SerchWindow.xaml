        <TextBox x:Name="PhoneNumBox" Margin="88,167,0,0" TextWrapping="Wrap" Text="" HorizontalAlignment="Left" Width="120" Height="23" VerticalAlignment="Top" Grid.Row="1"/>
        <Label x:Name="CellPhoneLabel" Content="携帯電話" HorizontalAlignment="Left" Margin="10,224,0,0" VerticalAlignment="Top" Grid.Row="1" Height="26" Width="58"/>
        <TextBox x:Name="CellPhoneNumBox" Margin="88,227,0,0" TextWrapping="Wrap" Text="" HorizontalAlignment="Left" Width="120" Height="23" VerticalAlignment="Top" Grid.Row="1"/>
        <Label x:Name="MailAddressLabel" Content="メールアドレス" HorizontalAlignment="Left" Margin="321,164,0,0" VerticalAlignment="Top" Grid.Row="1" Height="26" Width="72"/>
        <TextBox x:Name="MailAddressBox" Margin="399,167,0,0" TextWrapping="Wrap" Text="" Grid.Row="1" HorizontalAlignment="Left" Width="354" Height="23" VerticalAlignment="Top"/>
        <DataGrid HorizontalAlignment="Left" Margin="10,274,0,0" Grid.RowSpan="2" Width="743" Height="237" VerticalAlignment="Top"/>
        <Button Content="登録画面へ移動" HorizontalAlignment="Left" Margin="650,528,0,0" Grid.RowSpan="2" VerticalAlignment="Top" Width="103"/>
        <Button Content="クリア" HorizontalAlignment="Left" Margin="691,230,0,0" Grid.RowSpan="2" VerticalAlignment="Top" Width="62"/>
        <Button Content="検索" HorizontalAlignment="Left" Margin="601,230,0,0" Grid.RowSpan="2" VerticalAlignment="Top" Width="62"/>

    </Grid>
</Window>
