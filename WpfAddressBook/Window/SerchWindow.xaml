        <TextBox x:Name="PostalCodeBox" Margin="88,60,0,0" TextWrapping="Wrap" Text="" HorizontalAlignment="Left" Width="120" Height="23" VerticalAlignment="Top" Grid.Row="1"/>
        <Label x:Name="AddressLabel" Content="住所" HorizontalAlignment="Left" Margin="10,112,0,0" VerticalAlignment="Top" Grid.Row="1" Height="26" Width="34"/>
        <TextBox x:Name="AddressBox" Margin="88,115,0,0" TextWrapping="Wrap" Text="" Height="23" VerticalAlignment="Top" Grid.Row="1" HorizontalAlignment="Left" Width="544"/>
